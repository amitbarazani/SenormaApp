<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/img_royalcarribean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_fullname"
        android:textSize="30dp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/tv_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_centerInParent="true"
        android:layout_above="@+id/et_fullname"
        android:text="Full Name:"
        android:textSize="15dp"
        android:layout_marginTop="16dp"
        />
    <EditText
        android:id="@+id/et_fullname"
        android:layout_width="@android:dimen/thumbnail_height"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/tv_email"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:hint="Full Name"

        />


    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_centerInParent="true"
        android:layout_above="@+id/et_email"
        android:text="Email:"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/et_email"
        android:layout_width="@android:dimen/thumbnail_height"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/tv_subject"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:hint="email"

        />
    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_centerInParent="true"
        android:text="Subject:"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/et_subject"
        android:layout_below="@+id/tv_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Subject"
        android:layout_alignStart="@+id/et_email"
        android:layout_alignEnd="@id/et_email"
        />
    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:layout_below="@+id/et_subject"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        />


</RelativeLayout>