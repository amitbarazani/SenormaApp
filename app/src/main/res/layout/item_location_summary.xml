<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/img_locationPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"

        app:srcCompat="@android:drawable/sym_def_app_icon"
        />

    <TextView
        android:id="@+id/tv_locationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_locationPic"
        android:layout_marginLeft="12dp"
        android:text="Location name..."
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_locationName"
        android:layout_alignStart="@id/tv_locationName"
        android:layout_marginTop="8dp"
        android:text="description... "
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description"
        android:layout_alignStart="@id/tv_locationName"
        android:text="Distance: "
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:id="@+id/rl_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_locationPic"
        android:layout_centerHorizontal="true"

        >
        <TextView
            android:id="@+id/tv_restaurantsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurants In The Area: "
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/img_restaurant1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fork_and_knife"
            android:tint="#0037FF"
            android:layout_below="@id/tv_restaurantsText"
            android:layout_alignStart="@id/tv_restaurantsText"
            />
        <TextView
            android:id="@+id/tv_restaurantName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name 1..."
            android:layout_toEndOf="@id/img_restaurant1"
            android:layout_alignBottom="@id/img_restaurant1"
            android:textColor="@android:color/black"
            />
        <ImageView
            android:id="@+id/img_restaurant2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fork_and_knife"
            android:tint="#0037FF"
            android:layout_below="@id/img_restaurant1"
            android:layout_alignStart="@id/tv_restaurantsText"
            />
        <TextView
            android:id="@+id/tv_restaurantName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name 2..."
            android:layout_toEndOf="@id/img_restaurant2"
            android:layout_alignBottom="@id/img_restaurant2"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>





</RelativeLayout>